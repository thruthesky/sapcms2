<?php


use sap\core\Config\Config;
use sap\core\System\System;

function config($code) {

    $value = null;
    switch( $code ) {
        case 'database' :
            $value = System::getDatabaseConfiguration();
            break;
        case '' :
            break;
        default :
            $value = Config::load()->get($code);
            break;
    }

    return $value;
}